<body class="">

    @using (Html.BeginForm("Login", "Account", null, FormMethod.Post, htmlAttributes: new { @class = "form-horizontal form-login", role = "form", id = "loginForm", autocomplete = "off" }))
    {
        @Html.AntiForgeryToken()


        <div class="container">
            <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="panel-title">Sign In</div>
                        @*<div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">Forgot password?</a></div>*@
                    </div>

                    <div class="panel-body">
                        @Html.Alert(AlertHelper.AlertType.Danger, Html.ValidationSummary().ToHtmlString(), ViewData.ModelState.IsValid, false)
                        <div style="margin-bottom: 25px">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Username" })
                            </div>
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>


                        <div style="margin-bottom: 25px">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Password", type = "password" })
                                @*<input id="login-password" type="password" class="form-control" name="password" placeholder="password">*@
                            </div>
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>


                        <div class="input-group">
                            <div class="checkbox">
                                <label>
                                    @*<input id="login-remember" type="checkbox" name="remember" value="1"> Remember me*@
                                    @Html.CheckBoxFor(model => model.RememberMe, new { @class = "" }) Remember me
                                </label>
                            </div>
                        </div>

                        @*<div style="margin-top: 25px;margin-bottom: 25px;">
                            <div class="input-group">
                                <div class="g-recaptcha" data-sitekey="@System.Configuration.ConfigurationManager.AppSettings["ReCaptchaSiteKey"]" data-callback="recaptchaCallback"></div>
                            </div>
                            @Html.ValidationMessage("DivRecaptchaRequired", "", new { @class = "text-danger" })
                        </div>*@
                        
                        <div style="margin-top:10px" class="form-group">
                            <!-- Button -->

                            <div class="col-sm-12 controls">
                                <input type="submit" id="btn-login" class="btn btn-large btn-success" value="Login" />                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    }

