@model ParvazPardaz.Model.Entity.Core.Menu
@*@model ParvazPardaz.ViewModel.MenuViewModel*@
@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="~/content/kendo/2014.3.1314/kendo.common.min.css" rel="stylesheet" />
<link href="~/content/kendo/2014.3.1314/kendo.default.min.css" rel="stylesheet" />
<link href="~/content/kendo/2014.3.1314/kendo.rtl.min.css" rel="stylesheet" />
<script src="~/Scripts/kendo.mvc/kendo.web.min.js"></script>
<script src="~/Scripts/kendo.mvc/kendo.aspnetmvc.min.js"></script>
<script src="~/Scripts/kendo.mvc/cultures/kendo.culture.fa-IR.min.js"></script>
<script src="~/Scripts/kendo/kendo.fa-IR.js"></script>
<style scoped>
    .k-in {
        padding-right: 20px;
    }
</style>
<style>
    #treeview {
        width: 300px;
        margin: 0 auto;
    }

        #treeview .k-sprite {
            background-image: url("<%=Url.Content(\"~/Content/assets/treeview/coloricons-sprite.png\")%>");
        }

    .rootfolder {
        background-position: 0 0;
    }

    .folder {
        background-position: 0 -16px;
    }

    .pdf {
        background-position: 0 -32px;
    }

    .html {
        background-position: 0 -48px;
    }

    .image {
        background-position: 0 -64px;
    }

    .delete-link {
        width: 12px;
        height: 12px;
        background: transparent url("/Content/assets/images/close.png") no-repeat 50% 50%;
        overflow: hidden;
        display: inline-block;
        font-size: 0;
        line-height: 0;
        vertical-align: top;
        margin: 2px 0 0 3px;
        -webkit-border-radius: 5px;
        -mox-border-radius: 5px;
        border-radius: 5px;
    }

    .edit-link {
        width: 16px;
        height: 16px;
        background: transparent url("/Content/assets/images/edit.png") no-repeat 50% 50%;
        overflow: hidden;
        display: inline-block;
        font-size: 0;
        line-height: 0;
        vertical-align: top;
        margin: 2px 0 0 3px;
        -webkit-border-radius: 5px;
        -mox-border-radius: 5px;
        border-radius: 5px;
    }
</style>
<h2>@ParvazPardaz.Resource.CMS.CMS.ManagementMenu</h2>
<div class="container">
    <script id="treeview-template" type="text/kendo-ui-template">
        #: item.NodeText #
        @*# if (!item.items) { #*@
        <a class='delete-link' id='#:item.Id#' href="\#"></a>
        <a class='edit-link' id='#:item.Id#' href="/Admin/Menu/Edit/#:item.Id#"></a>
        @*# } #*@
    </script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    @*<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>*@
    @using (Ajax.BeginForm("Create", null, new AjaxOptions { HttpMethod = "POST", OnSuccess = "kendoRebind", OnFailure = "gotError" }, htmlAttributes: new { enctype = "multipart/form-data" }))
   
    {
        <div class="form-horizontal">
            <hr />
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.MenuParentId, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <span>@ParvazPardaz.Resource.CMS.CMS.FirstLevel</span>
                    <input type="checkbox" onclick="javascript:IsRootCheck();" title="@ParvazPardaz.Resource.CMS.CMS.FirstLevel" value="" id="chkroot" checked="checked" />
                    @(Html.Kendo()
                .TreeView()
                .DragAndDrop(true)                
         .Name("tree")
                .HtmlAttributes(new { @class = "tree-section" })
                .DataTextField("NodeText")
        .TemplateId("treeview-template")
                .Events(ev => ev.Select("onSelectedNode"))

                .DataSource(ds =>
                {
                    ds.Read(read => read.Action(actionName: "GetMenuItems", controllerName: "Menu").Data("Parameterfn"));
                    ds.Model(model => model
                        .Id("Id")
                        .HasChildren("Haschildren")
                         );
                }))
                    <script>
                        function Parameterfn(e)
                        {
                            return{
                                Id: e.Id,
                                MenugroupId:@(ViewBag.GroupId)
                                };
                        }
                    </script>
                    <script type="text/javascript">
                        var treeview;
                        var trv = jQuery.noConflict();
                        function onSelectedNode(e) {
                            trv("#chkroot").prop("checked", false);
                            var nodeId = treeview.dataItem(e.node).Id;
                            trv("#hdnGroupId").val(nodeId);
                            //Hiding menu type element
                            document.getElementById('MenuTypeDiv').style.display = 'none';
                            var a = document.getElementById("MenuType");
                            a.value = "Type_0";
                        }
                        trv(document).ready(function () {
                            treeview = trv("#tree").data("kendoTreeView");
                            trv("#chkroot").change(function () {
                                if (trv(this).prop('checked') == true) {
                                    trv("#hdnGroupId").val(null);
                                    //display menu type element
                                    document.getElementById('MenuTypeDiv').style.display = 'block';
                                }
                            });
                        });
                        function IsRootCheck() {
                            if (document.getElementById('MenuType').checked) {
                                //display menu type element
                                document.getElementById('MenuTypeDiv').style.display = 'block';
                            }
                            else{
                                //hiding menu type element
                                document.getElementById('MenuTypeDiv').style.display = 'none';
                                var a = document.getElementById("MenuType");
                                a.value = "Type_0";
                            }
                        }
                    </script>
                    <script type="text/javascript">
                        var itm = jQuery.noConflict();
                        itm(document).on("click", ".delete-link", function (e) {
                            if (confirm("@ParvazPardaz.Resource.CMS.CMS.WantDelete")) {
                                e.preventDefault();
                                var nodeId = e.target.id;
                                var itmths = this;
                                itm.ajax({
                                    type: "POST",
                                    url: "/Menu/Delete",
                                    data: { id: nodeId },
                                    dataType: "json",
                                    success: function (data) {
                                        if (data == "Success") {
                                            var treeview = itm("#tree").data("kendoTreeView");
                                            treeview.remove(itm(itmths).closest(".k-item"));
                                            alert("با موفقیت حذف شد")
                                        }
                                        else {
                                            alert("@ParvazPardaz.Resource.CMS.CMS.ErrorInDelete")
                                        }
                                    },
                                    error: function (data) {
                                        alert(data)
                                    }
                                });
                            }
                        });
                    </script>
                    <script type="text/javascript">
                        var $=jQuery.noConflict();
                        $( document ).ready(function() {
                            
                            $("#MenuType option[value='Type_0']").hide();
                        });
                    </script>
                </div>
                <input type="hidden" name="MenuParentId" id="hdnGroupId" />
            </div>
            <div id="MenuTypeDiv" class="form-group">
                @Html.LabelFor(model => model.MenuType, new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @*@Html.DropDownListFor(model => model.MenuType, ViewBag.MenuType as SelectList, string.Empty)*@
                    @Html.EnumDropDownListFor(model => model.MenuType, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MenuType, "", new { @class = "text-danger" })
                </div>
            </div>
            @*<div class="form-group">
                @Html.LabelFor(model => model.Lang, @ParvazPardaz.Model.ParvazPardazResource.tour.tourResource.Language, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Lang")
                    @Html.ValidationMessageFor(model => model.Lang)
                </div>
            </div>*@
            <div class="form-group">
                @Html.LabelFor(model => model.MenuTitle, new { @class = "control-label col-md-2" })
                <input type="hidden" name="MenuGroupId" value="@ViewBag.GroupId" />
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MenuTitle)
                    @Html.ValidationMessageFor(model => model.MenuTitle)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.OrderId, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.OrderId)
                    @Html.ValidationMessageFor(model => model.OrderId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.MenuIsActive, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.CheckBoxFor(model => model.MenuIsActive)
                    @Html.ValidationMessageFor(model => model.MenuIsActive)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.MenuUrl, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.MenuUrl, new { @class = "text-left", @style = "direction:ltr;" })
                    @Html.ValidationMessageFor(model => model.MenuUrl)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Target, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Target")
                    @Html.ValidationMessageFor(model => model.Target)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Image, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="fileupload fileupload-new" data-provides="fileupload">
                        <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;">
                            <img src="~/Images/Menu/no-image.png" alt="" />
                        </div>
                        <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                        <div>
                            <span class="btn btn-light-grey btn-file">
                                <span class="fileupload-new"><i class="fa fa-picture-o"></i> @ParvazPardaz.Resource.General.Generals.Select</span><span class="fileupload-exists"><i class="fa fa-picture-o"></i> @ParvazPardaz.Resource.General.Generals.Change</span>
                                <input type="file" name="Image" id="Image" />
                            </span>
                            <a href="#" class="btn fileupload-exists btn-light-grey" data-dismiss="fileupload">
                                <i class="fa fa-times"></i> @ParvazPardaz.Resource.General.Generals.Delete
                            </a>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.Image)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ShortDescription, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.TextAreaFor(model => model.ShortDescription, 3, 30, new { })*@
                    @Html.EditorFor(model => model.ShortDescription)
                    @Html.ValidationMessageFor(model => model.ShortDescription)
                </div>
            </div>

            <div class="col-md-12 text-center">
                <input type="submit" class="btn btn-success" value=@ParvazPardaz.Resource.CMS.CMS.Submit />
                @Html.ActionLink(ParvazPardaz.Resource.General.Generals.Back, actionName: "Index", controllerName: "MenuGroup", routeValues: new { @Area = "Admin" }, htmlAttributes: new { @class = "btn btn-primary" })
            </div>
        </div>
        <script type="text/javascript">
            function kendoRebind(e) {
                if (e == "Error") {
                    alert("@ParvazPardaz.Resource.CMS.CMS.Warning");
                }
                else if (e == "Success") {
                    var refgrid = jQuery.noConflict();
                    refgrid('#tree').data('kendoTreeView').dataSource.read();
                    // refgrid('#tree').data('kendoTreeView').refresh();
                    refgrid('input[type=text]').val('');
                    alert("@ParvazPardaz.Resource.CMS.CMS.SaveSuccessful");
                }

            }
            function gotError() {
                alert("@ParvazPardaz.Resource.CMS.CMS.Warning");
            }
        </script>
    }
</div>


@Html.Partial("_toastr")
@section scripts
    {
   <script>
       $( document ).ready(function() {
           $("#MenuType").children('option[value="0"]').css('display','none');
           $("#MenuType").children('option[value="0"]').removeAttr('selected');
       });
    </script>
    }