<div class="k-rtl">
    @(Html.Kendo().Grid<ParvazPardaz.ViewModel.TourViewModels.Request.GridRequestViewModel>()
        .Name("Grid")
        .Columns(columns =>
        {
            columns.Bound(model => model.AdultCount).Width(150);
            columns.Bound(model => model.ChildCount).Width(150);
            columns.Bound(model => model.InfantCount).Width(150);
            columns.Bound(model => model.RoomType).Width(150);
            columns.Bound(model => model.HotelPackageTitle).Width(150);
            columns.Bound(model => model.TourPackageTitle).Width(150);
            columns.Bound(model => model.UserName).Width(150);
            columns.Bound(model => model.FullName).Width(150);
            columns.Bound(model => model.PhoneNumber).Width(150);
            columns.Bound(model => model.Email).Width(150);
            columns.Bound(model => model.CreatorDateTime).ClientTemplate("#=(CreatorDateTime != null ? moment(CreatorDateTime).format('jYYYY/jMM/jDD HH:mm') : '')#").Width(150);
        })
            .Groupable()
            .Pageable()
            .Selectable(selectable => selectable.Mode(GridSelectionMode.Single)
            .Type(GridSelectionType.Row))
            .Navigatable()
            .Sortable()
            .Scrollable(scr => scr.Height(400))
            .Filterable()
            .DataSource(dataSource => dataSource
                .Ajax()
                .Sort(st =>
                {
                    st.Add(s => s.CreatorDateTime).Descending();
                    st.Add(s => s.Id).Descending();
                })

                .Model(model => model.Id(item => item.Id))
                .Read(read => read.Action("GetRequest", "Request", null)).PageSize(50)
            )
    )
    @Html.Partial("_Toastr")
</div>

@Html.Partial("_ConfirmationMessage")

@section scripts{
    <script src="~/Scripts/jquery.signalR-2.4.1.js"></script>
    <script src="~/signalr/hubs"></script>

    <script>
        var CreateUrl = "@Url.Action("Create", "PostGroup")";
        var EditUrl = "@Url.Action("Edit", "PostGroup")";
        var DeleteUrl = "@Url.Action("Delete", "PostGroup")";
    </script>

    <script>
        function GetSelectedItemParameters() {

            var gview = $("#Grid").data("kendoGrid");
            var SelectedItem = gview.dataItem(gview.select());
            if (SelectedItem == null) {
                toastr.options = { "positionClass": "toast-top-center" }
                toastr.error('@ParvazPardaz.Resource.General.Generals.SelectedGridRowAlert', '@ParvazPardaz.Resource.General.Generals.SelectedGridRowAlertTitle', { timeOut: 5000 })
                return false;
            }
            else {
                return SelectedItem;
            }
        }

        function CheckSelectedGrid() {
            var gview = $("#Grid").data("kendoGrid");
            var selectedItem = gview.dataItem(gview.select());
            if (selectedItem == null) {
                toastr.options = { "positionClass": "toast-top-center" }
                toastr.error('@ParvazPardaz.Resource.General.Generals.SelectedGridRowAlert', '@ParvazPardaz.Resource.General.Generals.SelectedGridRowAlertTitle', { timeOut: 5000 })
                return false;
            }
            else {
                var selectedId = selectedItem.Id;
                return selectedId;
            }
        }
        var wndRemove = $("#ConfirmationMessage").kendoWindow({
            title: "",
            modal: true,
            visible: false,
            resizable: false,
            width: 400,
        }).data("kendoWindow");

        function create(parameters) {
            window.location.replace(CreateUrl);
        }

        function edit(parameters) {

            var result = CheckSelectedGrid();
            if (result) {
                window.location.replace(EditUrl + "/" + result);
            }
        }

        function del(parameters) {
            var result = CheckSelectedGrid();
            if (result) {
                wndRemove.center();
                wndRemove.open();
            }
        }
        $("#btnYes").click(function () {
            var gview = $("#Grid").data("kendoGrid");
            var selectedItem = gview.dataItem(gview.select());
            var selectedId = selectedItem.Id;
            $.ajax({
                url: DeleteUrl,
                type: "post",
                dataType: "json",
                cache: false,
                data: { Id: selectedId },
                success: function (result) {
                    var gridm = $("#Grid").data("kendoGrid");
                    if (gridm != undefined && result) {
                        if (gridm.dataSource.transport.cache._store)
                            gridm.dataSource.transport.cache._store = {};
                        gridm.dataSource.fetch();
                        toastr.options = { "positionClass": "toast-top-center" }
                        toastr.error('@ParvazPardaz.Resource.General.Generals.DeleteAlert', '@ParvazPardaz.Resource.General.Generals.DeleteAlertTitle', { timeOut: 5000 })
                    }
                    else {
                        toastr.options = { "positionClass": "toast-top-center" }
                        toastr.error('@ParvazPardaz.Resource.General.Generals.ErrorAlert', '@ParvazPardaz.Resource.General.Generals.ErrorAlertTitle', { timeOut: 5000 })
                    }
                },
                error: function (xhr) {
                    toastr.options = { "positionClass": "toast-top-center" }
                    toastr.error('@ParvazPardaz.Resource.General.Generals.ErrorAlert', '@ParvazPardaz.Resource.General.Generals.ErrorAlertTitle', { timeOut: 5000 })
                }
            });
            wndRemove.close();
        })
        $("#btnNo").click(function () {
            wndRemove.close();
        })

        function getAll() {
            var gridm = $("#Grid").data("kendoGrid");
            if (gridm.dataSource.transport.cache._store)
                gridm.dataSource.transport.cache._store = {};
            gridm.dataSource.fetch();
        }
    </script>

    <script type="text/javascript">
        $(function () {
            // Reference the hub.
            var hubNotif = $.connection.requestHub;

            // Start the connection.
            $.connection.hub.start().done(function () {
                var connectionID = $.connection.hub.id;
                //getAll();
                //dataTable.getdata();

            });

            // Notify while anyChanges.
            hubNotif.client.updatedData = function () {
                var connectionID = $.connection.hub.id;
                getAll();
            };
        });
    </script>
}


