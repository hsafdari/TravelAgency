@model ParvazPardaz.ViewModel.EditTourHomeSliderViewModel

@{
    ViewBag.Title = "Edit";
}
@section css{
    <link href="~/Plugins/KendoDateTimePicker/Kendo.default.min.css" rel="stylesheet" />
    <link href="~/Plugins/KendoDateTimePicker/Kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/kendo/2014.3.1314/kendo.common-material.min.css" rel="stylesheet" />
    <link href="~/Content/kendo/2014.3.1314/kendo.material.min.css" rel="stylesheet" />
    <link href="~/Content/kendo/2014.3.1314/kendo.material.mobile.min.css" rel="stylesheet" />
    <link href="~/Content/kendo/2014.3.1314/kendo.rtl.min.css" rel="stylesheet" />
}
@using (Html.BeginForm("TourLandingSliderEdit", "Slider", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>@ParvazPardaz.Resource.CMS.CMS.ManagementSliderTourLanding </h3>
        <hr />
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(m => m.ImageURL)
        @*@Html.HiddenFor(m => m.SliderGroupID)*@
        <div class="form-group">
            @Html.LabelFor(model => model.SliderGroupID, new { @class = "control-label col-md-1" })
            <div class="col-md-3 number">
                @Html.DropDownListFor(model => model.SliderGroupID, new SelectList(ViewBag.SliderGroupDDL as IEnumerable<SelectListItem>, "Value", "Text", Model.SliderGroupID), new { @class = "form-control search-select select" })
                @Html.ValidationMessageFor(model => model.SliderGroupID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ImageTitle, new { @class = "control-label col-md-1" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.ImageTitle, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ImageTitle, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NavigationUrl, new { @class = "control-label col-md-1" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.NavigationUrl, new { @class = "form-control", style = "direction:ltr" })
                @Html.ValidationMessageFor(model => model.NavigationUrl, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group checkbox">
            @Html.LabelFor(model => model.ImageIsActive, new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.CheckBoxFor(model => model.ImageIsActive, new { @class = "flat-red" })
                @Html.ValidationMessageFor(model => model.ImageIsActive, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Priority, new { @class = "control-label col-md-1" })
            <div class="col-md-3 number">
                @Html.SpinFor(model => model.Priority, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Priority, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.HeaderDays, new { @class = "control-label col-md-1" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.HeaderDays, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.HeaderDays, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NavDescription, new { @class = "control-label col-md-1" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.NavDescription, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NavDescription, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Price, new { @class = "control-label col-md-1" })
            <div class="col-md-8">
                @*@Html.TextBoxFor(model => model.Price, "{0:#}", new { @class = "form-control" })*@
                @Html.SpinFor(model => model.Price).Limit(0, Int32.MaxValue).Postfix("تومان")
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.footerLine1, new { @class = "control-label col-md-1" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.footerLine1, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.footerLine1, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.footerLine2, new { @class = "control-label col-md-1" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.footerLine2, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.footerLine2, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Expirationdate, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Expirationdate, "{0:yyyy/MM/dd}", new { @class = "form-control datepicker" })
                @Html.ValidationMessageFor(model => model.Expirationdate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.File, new { @class = "control-label col-md-1" })
            <div class="col-md-8">
                @Html.FileUploaderFor(model => model.File).AddMore(false).IsMultiple(false).ItemAppendToEnd(false).RemoveConfirmation(true).ShowThumbs(true).RemoveButtonInEditMode(false).RemoveButton(true).Edit(new List<EditModeFileUpload>() { new EditModeFileUpload() { Name = "", Type = "", Size = 0, Url = Model.ImageURL } })
                <div class="alert alert-info">
                    <i class="fa fa-info-circle"></i>
                    <strong>توجه!</strong>
                    <p>@ParvazPardaz.Resource.CMS.CMS.PicSizeBlogFisrtPageSlider</p>
                    @*<p>برای گروه Magazine2 : تصویر با عرض 268 و ارتفاع 520 پیکسل وارد کنید</p>
                        <p>برای گروه Magazine3 : تصویر با عرض 365 و ارتفاع 365 پیکسل وارد کنید</p>
                        <p>@ParvazPardaz.Resource.CMS.CMS.PicSizeFisrtPageSlider</p>
                        <p>@ParvazPardaz.Resource.CMS.CMS.PicSizeFisrtPageCountryBox</p>
                        <p>@ParvazPardaz.Resource.CMS.CMS.PicSizeFisrtPageNowruzBoxSlide</p>
                        <p>@ParvazPardaz.Resource.CMS.CMS.PicSizeFisrtPageTourSlider</p>*@
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ImageDescription, new { @class = "control-label col-md-1" })
            <div class="col-md-8">
                @Html.TextAreaFor(model => model.ImageDescription, 5, 40, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ImageDescription, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-1 col-md-11">
                <input type="submit" value=@ParvazPardaz.Resource.General.Generals.Edit class="btn btn-custom green" />
                @Html.ActionLink(ParvazPardaz.Resource.General.Generals.Back, "TourLandingSliderIndex", null, new { @class = "btn btn-custom red" })
            </div>
        </div>
    </div>
}

@section scripts{
    <script src="~/Scripts/kendo.date/JalaliDate.js"></script>
    <script src="~/Scripts/kendo.date/kendo.web.js"></script>
    <script src="~/Scripts/kendo.date/fa-IR.js"></script>

    <script type="text/javascript">
        var $ = jQuery.noConflict();
        $(document).ready(function () {
            $(".datepicker").kendoDatePicker();
        });
    </script>
    <script type="text/javascript">
        $('.select').select2({ dir: "RTL" });
    </script>
}