@model  ListViewTourScheduleViewModel
@Html.HiddenFor(model => model.TourId)

<div class="well nopadding " id="TourSchedule@(Model.SectionId)">
    <div class="row nomargin">

        <div class="">
            <div class="col-md-2 nopadding left-column">
                @Html.Label(ParvazPardaz.Resource.Tour.Tours.TourPackageTitle + " : ")
                @Html.DisplayFor(model => model.TourPackageTitle)
            </div>

            <div class="col-md-8 nopadding center-culomn">

                <table class="table table-responsive">
                    <tbody>
                        <tr>
                            <td>
                                @Html.Label(ParvazPardaz.Resource.General.Generals.From + " : ")
                                @Html.DisplayFor(model => model.FromDate)
                            </td>
                            <td>
                                @Html.Label(ParvazPardaz.Resource.General.Generals.To + " : ")
                                @Html.DisplayFor(model => model.ToDate)
                            </td>
                            <td>
                                @Html.Label(ParvazPardaz.Resource.General.Generals.ExpireDate + " : ")
                                @Html.DisplayFor(model => model.ExpireDate)
                            </td>
                        </tr>
                        <tr>
                            @*<td>
                                    @Html.Label(ParvazPardaz.Resource.Tour.Tours.Price + " : ")
                                    @Html.DisplayFor(model => model.Price)
                                </td>*@
                            @*<td>
                                    @Html.Label(ParvazPardaz.Resource.Tour.Tours.Currency + " : ")
                                    @Html.DisplayFor(model => model.Currency)
                                </td>*@

                            <td>
                                @Html.Label(ParvazPardaz.Resource.Tour.Tours.Capacity + " : ")
                                @{
                                    if (Model.NonLimit)
                                    {
                                        @Html.Label(ParvazPardaz.Resource.Tour.Tours.NonLimit)
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(model => model.Capacity)
                                    }
                                }

                            </td>
                        </tr>
                    </tbody>
                </table>

                @foreach (var item in Model.CompanyTransfers)
                {
                    <table class="table table-responsive">
                        <tbody>
                            <tr>
                                <td>
                                    @Html.Label("زمان حرکت :")
                                    @Html.DisplayFor(model => item.StartDateTime)
                                </td>
                                <td>
                                    @Html.Label("زمان رسیدن :")
                                    @Html.DisplayFor(model => item.EndDateTime)
                                </td>
                            </tr>
                            <tr>
                                @*<td>
                                        @Html.Label(ParvazPardaz.Resource.Tour.Tours.DurationTime + " : ")
                                        @Html.DisplayFor(model => item.DurationTime)
                                    </td>*@
                                <td>
                                    @Html.Label(ParvazPardaz.Resource.Tour.Tours.CompanyTransfer + " : ")
                                    @Html.DisplayFor(model => item.CompanyTransferTitle)
                                </td>
                                <td>
                                    @Html.Label("میزان بار مجاز" + " : ")
                                    @Html.DisplayFor(model => item.BaggageAmount)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.Label("از فرودگاه" + " : ")
                                    @Html.DisplayFor(model => item.FromAirportTitle)
                                </td>
                                <td>
                                    @Html.Label("به فرودگاه" + " : ")
                                    @Html.DisplayFor(model => item.DestinationAirportTitle)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.Label("کلاس پروازی :")
                                    @*@Html.DisplayFor(model => item.FlightClass)*@
                                    @Html.DisplayFor(model => item.VehicleTypeClassTitle)
                                </td>
                                <td>
                                    @Html.Label("شماره پرواز :")
                                    @Html.DisplayFor(model => item.FlightNumber)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.Label("توضیحات :")
                                    @Html.DisplayFor(model => item.Description)
                                </td>
                                
                            </tr>
                        </tbody>
                    </table>
                }
            </div>

            <div class="col-md-1 right-culomn">
                @Ajax.ActionLink("ویرایش", "Edit", "TourSchedule", new { id = Model.Id }, new AjaxOptions()
                        {
                            InsertionMode = InsertionMode.Replace,
                            HttpMethod = "GET",
                            UpdateTargetId = "AddEditTourSchedule"
                        }, new { @class = "btn btn-sm btn-blue" })

                @Ajax.ActionLink("حذف", "Delete", "TourSchedule", new { id = Model.Id, sectionId = Model.SectionId, tourId = Model.TourId },
                                        new AjaxOptions()
                                   {
                                       OnSuccess = "SuccessRemoveTourSchedule",
                                       HttpMethod = "POST",
                                   }, new { @class = "btn btn-sm btn-red" })
            </div>
        </div>

        <div class="clearfix"></div>

