                <div class="col-md-4 ">
                    <div class="col-md-3">

                        <a class="btn btn-sm btn-default" href="/Admin/TourScheduleCompanyTransfer/Create?tourScheduleId=@Model.Id" data-ajax-update="#TourScheduleCompanyTransferModal" data-ajax-success="ShowModalTourScheduleCompanyTransfer" data-ajax-mode="replace" data-ajax-method="GET" data-ajax="true"><i class="fa fa-plane fa-lg  " style="color: blue; "></i> @ParvazPardaz.Resource.Tour.Tours.AddFlight </a>
                    </div>
                    <div class="col-md-5">

                        <a class="btn btn-sm btn-default" href="/Admin/TourScheduleAdditionalService/Create?tourScheduleId=@Model.Id" data-ajax-update="#TourScheduleAdditionalServiceModal" data-ajax-success="ShowModalTourScheduleAdditionalService" data-ajax-mode="replace" data-ajax-method="GET" data-ajax="true"><i class="fa fa-plus-square fa-lg" style="color: blue; "></i> @ParvazPardaz.Resource.Tour.Tours.AddAdditionalService </a>
                    </div>
                    <div class="col-md-4">


                        <a class="btn btn-sm btn-default " href="/Admin/TourScheduleHotel/Create?tourScheduleId=@Model.Id" data-ajax-update="#TourScheduleHotelModal" data-ajax-success="ShowModalTourScheduleHotel" data-ajax-mode="replace" data-ajax-method="GET" data-ajax="true"><i class="fa fa-h-square fa-lg  " style="color: blue; "></i> @ParvazPardaz.Resource.Tour.Tours.AddHotel </a>
                    </div>
                </div>
            </div>*@
    </div>
</div>
