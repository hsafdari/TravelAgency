                    @Html.TextBoxFor(model => model.UserAddresses[index].Fax, new { @class = "form-control TxtFax" })
                    @Html.ValidationMessageFor(model => model.UserAddresses[index].Fax, "", new { @class = "text-danger" })
                </div>
