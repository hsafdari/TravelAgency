@model MyProfileViewModel
@{
    ViewBag.Title = "بازنشانی کلمه عبور";
    Layout = null;
}
@using (Ajax.BeginForm("ChangePassword", "MyAccount", new AjaxOptions() { HttpMethod = "post", OnSuccess = "AjaxChangePasswordSuccess", OnFailure = "AjaxChangePasswordFailure" }, new { @class = "form", @id = "form-reset-pass" }))
{
    @Html.AntiForgeryToken()
    @Html.Alert(AlertHelper.AlertType.Danger, Html.ValidationSummary().ToHtmlString(), ViewData.ModelState.IsValid, false)

    <label class="label">
        @Html.LabelFor(model => model.ChangePasswordViewModel.OldPassword, new { @class = "label-text" })
        @Html.TextBoxFor(model => model.ChangePasswordViewModel.OldPassword, new { @style = "direction:ltr", type = "password" })
        @Html.ValidationMessageFor(model => model.ChangePasswordViewModel.OldPassword, "", new { @class = "form-error" })
    </label>

    <label class="label">
        @Html.LabelFor(model => model.ChangePasswordViewModel.Password, new { @class = "label-text" })
        @Html.TextBoxFor(model => model.ChangePasswordViewModel.Password, new { @style = "direction:ltr", type = "password" })
        @Html.ValidationMessageFor(model => model.ChangePasswordViewModel.Password, "", new { @class = "form-error" })
    </label>

    <label class="label">
        @Html.LabelFor(model => model.ChangePasswordViewModel.ConfirmPassword, new { @class = "label-text" })
        @Html.TextBoxFor(model => model.ChangePasswordViewModel.ConfirmPassword, new { @style = "direction:ltr", type = "password" })
        @Html.ValidationMessageFor(model => model.ChangePasswordViewModel.ConfirmPassword, "", new { @class = "form-error" })
    </label>

    <label class="label">
        <input type="submit" value="ثبت تغییرات" class="btn btn-success" style="margin-top:24px;" />
    </label>
}
