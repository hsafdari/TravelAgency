@model ParvazPardaz.ViewModel.SignupViewModel
@{
    ViewBag.Title = "عضویت در سایت";
}

<style>
    .input-group {
        margin-bottom: 15px;
    }

    .message {
        width: 100% !important;
        text-align: center !important;
    }
</style>
<div class="container" style="margin-top: 30px;">
    <!-- Breadcrumb Start-->
    <ul class="breadcrumb">
        <li><a href="/"><i class="fa fa-home"></i></a></li>
        <li><a href="#">حساب کاربری</a></li>
        <li>عضویت در سایت</li>
    </ul>
    <div class="panel panel-default well">
        <div class="panel-body">
            <div class="row">
                <!--Right Part Start -->
                <aside id="column-right" class="col-md-3 col-sm-3 hidden-xs">
                    <h4 class="subtitle">حساب کاربری</h4>
                    <div class="list-group">
                        <ul class="list-item">
                            <li><a href="/Account/Login">ورود</a></li>
                            <li><a href="/Account/SignUp">ثبت نام</a></li>
                            <li><a href="/Account/ForgetPassword">فراموشی رمز عبور</a></li>
                        </ul>
                    </div>
                </aside>
                <!--Right Part End -->
                <!--Middle Part Start-->
                <div class="col-md-9 col-sm-9" id="content">
                    <h4 class="title">@ViewBag.Title</h4>
                    @using (Html.BeginForm("SignUp", "Account", null, FormMethod.Post, new { @class = "registration-form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-envelope-o"></i>
                                    </div>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "ایمیل" })
                                </div>
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-key"></i>
                                    </div>
                                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "کلمه عبور", @type = "password" })
                                </div>
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-key"></i>
                                    </div>
                                    @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control", @placeholder = "تکرار کلمه عبور", @type = "password" })
                                </div>
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group" style="margin-top:30px">
                            <div class="col-sm-12">
                                <button id="contacts-submit" type="submit" class="btn btn-default btn-info">عضویت</button>
                            </div>
                        </div>
                    }

                </div>
                <!--Middle Part End -->
                @*<div class="col-md-8">
                        <h4>@ViewBag.Title</h4>

                        <div class="panel panel-default well">
                            <div class="panel-body">

                            </div>
                        </div>
                    </div>
                    <div class="col-md-2"> </div>*@
            </div>
        </div>
    </div>

</div>