@model IEnumerable<PostDetailViewModel>
<div id="political-world-section" class="political-world-section">
    <aside>
        <div class="section-header">
            <h2>سفر+ </h2>
        </div>
        <div class="container">
            <div class="row">
                <div id="political-world" class=" political-world owl-carousel owl-theme">
                    @foreach (var item in Model)
                    {
                        <div class="item">
                            <div class="col-md-12">
                                <div class="post-box">
                                    <div class="image-box">
                                        @*<img src="@(item.ImageUrl575x530 == null ? "#" : item.ImageUrl575x530 + "-271x248" + item.Extention575x530)" alt="@item.Name575x530" />*@
                                        <img src="@(item.ImageUrl == null ? "#" : item.ImageUrl)" alt="@item.Name575x530" />
                                        <a href="@(item.URL)" title="@item.Title" rel="@item.Rel" class="add-sign-small color-dark-pink"><img src="/ClientTheme/images/icon/small-plus.png" alt="big-plus" /></a>
                                    </div>
                                    <ul class="comments-social">
                                        <li><a href="#"><img src="/ClientTheme/images/icon/like-icon.png" alt="like" /></a></li>
                                        <li class="dropdown">
                                            <a href="#"><img src="/ClientTheme/images/icon/more-icon.png" alt="more-icon" /></a>
                                            <ul class="dropdown-menu" role="menu">
                                                <li><a href="#">Facebook</a></li>
                                                <li><a href="#">Twitter</a></li>
                                                <li><a href="#">Google</a></li>
                                                <li><a href="#">Linkedin</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                    <section>
                                        <h1 class="hidden">@item.Title</h1>

                                        <div class="post-box-inner">
                                            <a href="@(item.URL)" title="@item.Title" rel="@item.Rel" class="box-read-more"><img src="/ClientTheme/images/icon/arrow.png" alt="بیشتر" /> بیشتر</a>
                                            <div class="box-content">
                                                <a href="@(item.URL)" title="@item.Title" rel="@item.Rel" class="block-title">@(item.Name)</a>
                                                <p class="time"><i class="fa fa-clock-o"></i>@item.PublishDatetime.ToString("yyyy/MM/dd")</p>
                                                <p>@(item.PostSummery)</p>
                                                @*<a href="#"><i class="fa fa-heart"></i>@(item.LikeCount)</a>*@
                                                <a href="#"><img src="/ClientTheme/images/icon/comment-icon.png" alt="comment" /> 13</a>
                                                <a href="#"><i class="fa fa-eye"></i> @item.VisitCount</a>
                                                <div class="postGroups">
                                                    @if (@item.PostGroups.Count() > 0)
                                                    {
                                                        <a href="#" class="postG">دسته ها: </a>
                                                        foreach (var group in item.PostGroups)
                                                        {
                                                            <a href="@group.URL" title="@item.Title" rel="@item.Rel">@group.Name </a>
                                                        }
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </section>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </aside>
</div>
